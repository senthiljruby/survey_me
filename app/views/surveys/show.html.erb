<%= form_tag survey_response_survey_path(@survey), :class => 'form-signin' %>
  <h2 class="form-signin-heading">Survey: <%= @survey.name %></h2>
  <div>
    <% flag_id = 1 %>
    <% @survey.questions.each do |question| %>
      <strong><u>Question # <%= flag_id %></u></strong><br />
      <%= raw question.content %> <br /> <br />
      <%= hidden_field_tag "question_ids[]", question.id %>
      <%= label "user_answers", "Your Answer" %>
      <% if @survey.question_type == 'Essay' %>
        <%= text_area_tag "user_answers[]", nil, :rows => '10', :class => "input-block-level", :id => "user_answers_#{question.id}"  %><br/> 
      <% elsif @survey.question_type == 'Numeric' %>
        <%= text_field_tag "user_answers[]", nil, :class => "input-block-level numeric", :id => "user_answers_#{question.id}"  %><br/>
      <% else %>
        <%= text_field_tag "user_answers[]", nil, "data-date-format" => "dd/mm/yy", :value=>"16/01/12", :class => "span2 user_answer", :id => "user_answers_#{question.id}" %><br/><br/> 
      <% end %>
      <% flag_id += 1 %>
    <% end %>
    <%= submit_tag 'Save', :class=> "btn btn-small btn-success" %>
  </div>
</form>

<script type="text/javascript">
  $(document).ready(function(){
    $('.user_answer').datepicker();
  });
</script>