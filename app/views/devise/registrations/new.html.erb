<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
                       :html => {:class => "form-signin"}) do |f| %>

  <h2>Register</h2>
  <%= devise_error_messages! %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, :class => "input-block-level" %>
  </div>

  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name, :class => "input-block-level" %>
  </div>
  
  <div>
    <%= f.label :screen_name %>
    <%= f.text_field :screen_name, :class => "input-block-level" %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, :class => "input-block-level" %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "input-block-level" %>
  </div>

  <div>
    <%= f.submit "Sign up",  :class => "btn btn-primary" %>
  </div>
  <div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>